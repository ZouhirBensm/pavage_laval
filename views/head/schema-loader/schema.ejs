<% if (req_path === '/' || req_path === '/en') { %>

  <script src="/js/schema/WebSiteSchema.js"></script>
  <script src="/js/schema/ServiceSchema.js"></script>
  <script src="/js/schema/BreadcrumbListSchema.js"></script>
  
  <style>
    @media (max-width: 850px) {
      .responsive-img {
        width: 100%;
        padding-top: 10px;
        padding-bottom: 10px;
      }
    }
  </style>

<% } else if (req_path === '/demande-de-devis-gratuit' || req_path === '/request-a-free-quote/en') { %>

  <script src="/js/schema/ContactPageSchema.js"></script>



<% } else if (req_path === '/organisation' || req_path === '/organization/en') { %>

  <script src="/js/schema/OrganizatonSchema.js"></script>


<% } else if (req_path === '/a-propos' || req_path === '/about/en') { %>

  <script src="/js/schema/AboutWebPageSchema.js"></script>


<% } else if (/^\/blog\/[^\/]+\/blog-posting\/[^\/]+$/.test(req_path)) { %>

  <script src="/js/schema/BlogPostingSchema.js"></script>


<% } else { %>
  <p>Status is unknown.</p>
<% } %>